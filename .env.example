# FENIX Trading Bot - Variables de Entorno
# Copia este archivo como .env y completa con tus credenciales reales

# ===== BINANCE API =====
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# ===== CONFIGURACIÓN DE ENTORNO =====
ENVIRONMENT=development
LOG_LEVEL=INFO

# ===== CONFIGURACIÓN DE TRADING =====
TRADING_MODE=testnet
DEFAULT_SYMBOL=BTCUSDT
MAX_POSITION_SIZE=100

# ===== CONFIGURACIÓN DE RIESGO =====
MAX_DAILY_LOSS=500
STOP_LOSS_PERCENTAGE=2.0
TAKE_PROFIT_PERCENTAGE=4.0

# ===== CONFIGURACIÓN LLM =====
# Opcional: Si usas servicios externos de LLM
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GROQ_API_KEY=your_groq_api_key_here
LLM_PROFILE=groq_free
LLM_ALLOW_NOOP_STUB=1  # Set 0 in production to fail fast when LLM providers are missing

# ===== HUGGINGFACE API (RECOMENDADO para paralelización) =====
# Obtener token gratis en: https://huggingface.co/settings/tokens
# Tier gratuito: ~30 requests/min (suficiente para trading)
HUGGINGFACE_API_KEY=hf_your_token_here
# Alternativa: HF_TOKEN=hf_your_token_here

# ===== CONFIGURACIÓN HÍBRIDA (MLX Local + APIs Cloud) =====
# Forzar agentes específicos a usar API (opcional)
# Útil para paralelización sin consumir RAM local
FORCE_API_SENTIMENT=false
FORCE_API_VISUAL=false
FORCE_API_QABBA=false

# Fallback automático si API falla → MLX local
ENABLE_API_FALLBACK=true

# Ollama Cloud (alternativa a HuggingFace)
# OLLAMA_CLOUD_API_KEY=your_ollama_key_here
# OLLAMA_CLOUD_URL=https://ollama.ai/api

# ===== CONFIGURACIÓN DE MONITOREO =====
# Opcional: Para alertas y notificaciones
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# ===== CONFIGURACIÓN DE BASE DE DATOS =====
# Opcional: Si usas base de datos externa
DATABASE_URL=sqlite:///fenix_trading.db

# ===== CONFIGURACIÓN DE CACHE =====
REDIS_URL=redis://localhost:6379/0

# ===== CONFIGURACIÓN DE SEGURIDAD =====
SECRET_KEY=your_secret_key_for_encryption_here
JWT_SECRET=your_jwt_secret_here

# ===== CONFIGURACIÓN DE DESARROLLO =====
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_BACKTESTING=true
ENABLE_PAPER_TRADING=true

# ===== CONFIGURACIÓN DE PERFORMANCE =====
MAX_WORKERS=4
CACHE_TTL=300
BATCH_SIZE=100

# ===== CONFIGURACIÓN DE TIMEFRAMES =====
PRIMARY_TIMEFRAME=1m
SECONDARY_TIMEFRAME=5m
ANALYSIS_TIMEFRAME=15m

# ===== CONFIGURACIÓN DE AGENTES =====
ENABLE_SENTIMENT_AGENT=true
ENABLE_TECHNICAL_AGENT=true
ENABLE_VISUAL_AGENT=true
ENABLE_QABBA_AGENT=true
ENABLE_RISK_AGENT=true

# ===== CONFIGURACIÓN DE ALERTAS =====
ENABLE_EMAIL_ALERTS=false
ENABLE_SMS_ALERTS=false
ENABLE_PUSH_NOTIFICATIONS=false

# ===== CONFIGURACIÓN DE BACKUP =====
BACKUP_INTERVAL=3600
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP=true